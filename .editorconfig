root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true
quote_type = single

trim_trailing_whitespace = true

[/android/**]
indent_style = unset
indent_size = unset
end_of_line = unset
charset = unset
insert_final_newline = unset
quote_type = unset

[*.md]
trim_trailing_whitespace = false

[*.scss]
indent_size = 2

[*.ts]
indent_size = 2
